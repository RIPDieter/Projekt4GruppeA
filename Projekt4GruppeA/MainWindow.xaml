<Window x:Class="Projekt4GruppeA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt4GruppeA"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="600
        ">
    <Grid Margin="0,0,0,0">
        <Canvas x:Name="roadHorizontal" HorizontalAlignment="Left" Height="100" Margin="0,119,-569,-208" VerticalAlignment="Top" Width="592" Background="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="1"/>
        <Slider x:Name="sldTime" ValueChanged="sldTime_ValueChanged" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="168,73,-232,-80" Minimum="1" Height="18" Grid.Column="2" Grid.Row="1"/>
        <Button x:Name="btnSpawn" Click="btnSpawn_Click" Content="Spawn Cars" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="20,26,-84,-35" Height="20" Grid.Column="2" Grid.Row="1"/>
        <Button x:Name="btnTimer" Click="btnTimer_Click" Content="Start Timer" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="168,26,-232,-35" Height="20" Grid.Column="2" Grid.Row="1"/>
        <Slider x:Name="sldSpawn" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="20,73,-84,-80" ValueChanged="sldSpawn_ValueChanged" Height="18" Grid.Column="2" Grid.Row="1"/>
        
    <Grid HorizontalAlignment="Left" Height="100" Margin="0,119,-580,-208" VerticalAlignment="Top" Width="592" Grid.ColumnSpan="3" Grid.Row="1"/>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0" />
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

    </Grid>
</Window>
