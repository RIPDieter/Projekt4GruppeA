<Window x:Class="Projekt4GruppeA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt4GruppeA"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Canvas x:Name="roadHorizontal" HorizontalAlignment="Left" Height="100" Margin="10,130,0,0" VerticalAlignment="Top" Width="572" Background="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
        <Slider x:Name="sldLapse" ValueChanged="sldSpawn_ValueChanged" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Margin="20,78,0,0" Minimum="1"/>
        <Button x:Name="btnSpawn" Click="btnSpawn_Click" Content="Spawn Cars" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="20,37,0,0"/>
        <Button x:Name="btnTimer" Click="btnTimer_Click" Content="Start Timer" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="168,37,0,0"/>

    </Grid>
</Window>
